// types/shipment.ts
export interface Shipment {
  id: string;
  trackingNumber: string;
  origin: string;
  destination: string;
  carrier: 'UPS' | 'FedEx' | 'USPS' | 'DHL'; // Union type for specific values
  status: 'Created' | 'In Transit' | 'Delivered' | 'Cancelled'; // Union type for specific values
  shipDate: string; // Can be string (from API) or Date (after parsing)
  eta: string;
  createdAt?: string | Date;
  updatedAt?: string | Date;
}

// Optional: Type for API responses
export interface ApiResponse<T> {
  data: T;
  total?: number;
  page?: number;
  pageSize?: number;
}

// Optional: Type for creating/updating shipments
export interface ShipmentFormValues {
  origin: string;
  destination: string;
  carrier: string;
  shipDate: string;
  eta: string;
}

export enum ShipmentStatus {
  PENDING = 'Pending',
  IN_TRANSIT = 'In Transit',
  DELIVERED = 'Delivered',
  CANCELLED = 'Cancelled',
}

