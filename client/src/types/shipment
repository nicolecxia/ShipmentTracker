// types/shipment.ts
export interface Shipment {
  id: string;
  trackingNumber: string;
  origin: string;
  destination: string;
  carrier: string;
  status: 'Created' | 'In Transit' | 'Delivered' | 'Cancelled'; // Union type for specific values
  shipDate: string | Date; // Can be string (from API) or Date (after parsing)
  eta: string | Date;
  createdAt?: string | Date;
  updatedAt?: string | Date;
}

// Optional: Type for API responses
export interface ApiResponse<T> {
  data: T;
  total?: number;
  page?: number;
  pageSize?: number;
}

// Optional: Type for creating/updating shipments
export interface ShipmentFormValues {
  origin: string;
  destination: string;
  carrier: string;
  shipDate: Date | null;
  eta: Date | null;
}